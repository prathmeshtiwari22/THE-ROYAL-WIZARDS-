<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutLandscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:onClick="showDisasterDetails">

            <ImageView
                android:id="@+id/Landscape"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/landscape"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Landscape" />

            <TextView
                android:id="@+id/disasterName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:text="Landscape" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEarthquake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:onClick="showDisasterDetails">

            <ImageView
                android:id="@+id/Earthquake"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/earthquake"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Earthquake" />

            <TextView
                android:id="@+id/disasterName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:text="Earthquake" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutFlood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:onClick="showDisasterDetails">

            <ImageView
                android:id="@+id/Flood"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/flood"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Flood" />

            <TextView
                android:id="@+id/disasterName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:text="Flood" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCyclone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:onClick="showDisasterDetails">

            <ImageView
                android:id="@+id/cyclone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cyclone"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Cyclone" />

            <TextView
                android:id="@+id/disasterName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:text="Cyclone" />

        </LinearLayout>


        <!-- Add other LinearLayouts for different disasters -->

    </LinearLayout>

</ScrollView>
